{
	"name": "legacypenguin",
	"version": "1.0.7",
	"description": "Legacy Penguin Downloadable Client",
	"productName": "Legacy Penguin",
	"main": "main.js",
	"scripts": {
		"start": "electron ."
	},
	"repository": "https://github.com/rocketprogrammer/client",
	"keywords": [
		"club penguin"
	],
	"build": {
		"publish": [
			{
				"provider": "github",
				"owner": "rocketprogrammer",
				"repo": "client"
			}
		],
		"appId": "net.legacypenguin.client",
		"mac": {
			"asar": false,
			"target": "dmg",
			"category": "public.app-category.games",
			"icon": "icons/macOS/mac_os_icon.icns",
			"files": [
				"**/*",
				"!**/flash/{windows, linux}",
				"!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
				"!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
				"!**/node_modules/*.d.ts",
				"!**/node_modules/.bin",
				"!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
				"!.editorconfig",
				"!**/._*",
				"!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes,.github}",
				"!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
				"!**/{appveyor.yml,.travis.yml,circle.yml}",
				"!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
			]
		},
		"dmg": {
			"background": "background/macos_bg.png"
		},
		"linux": {
			"asar": false,
			"target": [
				{
					"target": "deb",
					"arch": [
						"x64",
						"ia32"
					]
				},
				{
					"target": "AppImage",
					"arch": [
						"x64",
						"ia32"
					]
				},
				{
					"target": "snap",
					"arch": [
						"x64"
					]
				}
			],
			"files": [
				"**/*",
				"!**/flash/{windows, mac}",
				"!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
				"!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
				"!**/node_modules/*.d.ts",
				"!**/node_modules/.bin",
				"!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
				"!.editorconfig",
				"!**/._*",
				"!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes,.github,background}",
				"!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
				"!**/{appveyor.yml,.travis.yml,circle.yml}",
				"!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
			],
			"icon": "icons/linux/"
		},
		"win": {
			"asar": false,
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64",
						"ia32"
					]
				}
			],
			"files": [
				"**/*",
				"!**/flash/{linux,mac}",
				"!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
				"!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
				"!**/node_modules/*.d.ts",
				"!**/node_modules/.bin",
				"!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
				"!.editorconfig",
				"!**/._*",
				"!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes,.github,background,icons}",
				"!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
				"!**/{appveyor.yml,.travis.yml,circle.yml}",
				"!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
			],
			"icon": "icons/windows/icon.ico"
		}
	},
	"author": "Legacy Penguin <support@legacypengu.in> (https://legacypengu.in)",
	"license": "CC0-1.0",
	"devDependencies": {
		"electron": "^11.1.1",
		"electron-builder": "^22.11.5"
	},
	"dependencies": {
		"discord-rpc": "^3.1.4",
		"electron-updater": "^4.3.9",
		"ini": ">=2.0.0"
	}
}
